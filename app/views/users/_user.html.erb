<div class="user-card">
  <h3><%= link_to user.username, user_path(user) %></h3>
  <% if user.avatar.attached? %>
    <%= image_tag user.avatar, alt: user.username, style: "width: 50px; height: 50px; border-radius: 50%;" %>
  <% else %>
    <p>No avatar</p>
  <% end %>
  <p><%= user.bio %></p>
</div>
<hr>
